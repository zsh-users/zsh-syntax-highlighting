ZSH_SYNTAX_HIGHLIGHTING_STYLES[path]='fg=cyan'
ZSH_SYNTAX_HIGHLIGHTING_STYLES[single-hyphen-option]='fg=yellow,bold'
ZSH_SYNTAX_HIGHLIGHTING_STYLES[double-hyphen-option]='fg=green,bold'
